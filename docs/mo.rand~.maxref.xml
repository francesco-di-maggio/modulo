<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<?xml-stylesheet href="./_c74_ref.xsl" type="text/xsl"?>

<c74object name='mo.rand~'>

	<digest>Generate band-limited multichannel random signals.</digest>
	<description>Generate multichannel signals consisting of random values linerarly-interpolated between [-1, 1] at adjustable frequency and almplitude.</description>

	<discussion><h4><openfilelink filename="modulo.maxpat"> Open the Overview Patch</openfilelink></h4></discussion>

	<!--METADATA-->
	<metadatalist>
		<metadata name='author'>Francesco Di Maggio</metadata>
		<metadata name='tag'>input</metadata>
	</metadatalist>

	<!--INLETS-->
    <!-- <inletlist>
        <inlet id="0" type="list">
            <digest>list: input to be filtered [range: -1,1]</digest>
        </inlet>
    </inletlist> -->

    <!--OUTLETS-->
    <outletlist>
        <outlet id="0" type="list">
            <digest>list: multichannel random signals</digest>
        </outlet>
    </outletlist>	

    <!--ARGUMENTS-->
    <objarglist>
        <objarg name="chans" optional="1" type="int">
            <digest>Number of channels, default is 1.</digest>
        </objarg>
    </objarglist>

    <!--MESSAGES-->
    <methodlist> 

        <method name="chans">
            <arglist>
                <arg name="chans-num" optional="0" type="int" />
            </arglist>
            <digest>Number of channels</digest>
            <description>Number of channels.</description>
        </method>

        <method name="onoff">
            <arglist>
                <arg name="on-off" optional="0" type="toggle" />
            </arglist>
            <digest>Enable/disable signal generator</digest>
            <description>Enable/disable signal generator.</description>
        </method>        

        <method name="rate">
            <arglist>
                <arg name="freq-rate" optional="0" type="float" />
            </arglist>
            <digest>Frequency rate</digest>
            <description>Frequency rate.</description>
        </method>   
        
        <method name="amount">
            <arglist>
                <arg name="amp" optional="0" type="float" />
            </arglist>
            <digest>Amplitude</digest>
            <description>Amplitude.</description>
        </method>                  

    </methodlist>	

    <!--ATTRIBUTES-->
    <attributelist>

        <attribute name='chans' get='1' set='1' type='int' size='1' >
            <digest>Number of channels</digest>
            <description>Number of channels.</description>
        </attribute>
​
        <attribute name='onoff' get='1' set='1' type='toggle' size='1' >
            <digest>Enable/disable signal generator</digest>
            <description>Enable/disable signal generator.</description>
        </attribute>
​
        <attribute name='rate' get='1' set='1' type='float' size='1' >
            <digest>Frequency rate</digest>
            <description>Frequency rate.</description>
        </attribute>

        <attribute name='amount' get='1' set='1' type='float' size='1' >
            <digest>Amplitude</digest>
            <description>Amplitude.</description>
        </attribute>

    </attributelist>

	<!--SEEALSO-->
    <seealsolist>
        <seealso name="mo.rms~"/>
        <seealso name="mo.~2list~"/>
        <seealso name="mo.scope~"/>
        <seealso name="mo.meter~"/>
    </seealsolist>

</c74object>